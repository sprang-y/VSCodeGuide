    "version": "0.2.0",
    "inputs": [
        {
            "type": "promptString",
            "id": "Age",
            "default": "-1",
            "description": "Enter your age"
        },
        {
            "type": "pickString",
            "id": "Mode",
            "options": [
                "Mode 1",
                "Mode 2"
            ],
            "default": "Mode 1",
            "description": "Enter the mode"
        }
    ],
    "configurations": [
        {
            "name": "Python: Debug Application",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "console": "integratedTerminal",
            "args": [
                "${input:Age}",
                "${input:Mode}"
            ]
        }
    ]
}